    /**
     *
     * Pulls back ALL fields within the SlickSidebar_Location__c object and returns it as a JSON string
     *
     **/
    public String getAllLocations() {

        List<SlickSidebar_Location__c> locations;
        String locationsQuery;

        locationsQuery = SlickSidebarFieldsetHelper.createBaseQueryString(new SlickSidebar_Location__c(), SObjectType.SlickSidebar_Location__c.FieldSets.SlickSidebarNearbyLocationComponent.getFields());

        try {
            locations = Database.query(locationsQuery);
        } catch (Exception ex) {
            System.debug('There are no other Locations in the system to map!!!');
            locations = null;
        }

        if ( locations != null) {
            return JSON.serialize(locations);
        } else {
            return '';
        }    
    }

